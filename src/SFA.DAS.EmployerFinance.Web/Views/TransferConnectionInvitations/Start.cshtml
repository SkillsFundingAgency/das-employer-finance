@model SFA.DAS.EmployerFinance.Web.ViewModels.Transfers.StartTransferConnectionInvitationViewModel

@{
    ViewBag.Title = "Start transfer connection request";
    ViewBag.Section = "finance";
    ViewBag.PageID = "page-transfer-connection-requests-start";
    ViewBag.GaData.Vpv = "/accounts/transfers/connections/requests/start";
}

<partial model="@ViewData.ModelState" name="_ValidationSummary"/>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">
            Which employer are you connecting with?
        </h1>
        <form method="POST" asp-controller="TransferConnectionInvitations" asp-action="Start" asp-route-hashedAccountId="@Model.HashedAccountId">
            <div asp-fieldname="ReceiverAccountPublicHashedId" class="govuk-form-group">
                <label class="govuk-label govuk-label--s" asp-for="ReceiverAccountPublicHashedId">Enter the employer's apprenticeship account ID</label>
                <div class="govuk-hint">
                    You need to request this directly from the employer. Account IDs can be found under the account name on the apprenticeship service homepage
                </div>
                <span esfa-validation-for="ReceiverAccountPublicHashedId" class="govuk-error-message"></span>
                @Html.TextBoxFor(m => m.ReceiverAccountPublicHashedId, new { aria_required = true, @class = "govuk-input govuk-input--width-10" })
            </div>
            <button class="govuk-button" type="submit">Continue</button>
        </form>
    </div>
</div>

@section breadcrumb {
    <a class="govuk-back-link" href="@Url.Action("Index", "TransferConnectionInvitations", new {Model.HashedAccountId})">Back</a>
}
