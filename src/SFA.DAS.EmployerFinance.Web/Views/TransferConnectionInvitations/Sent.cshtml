@using SFA.DAS.EmployerFinance.Web.Infrastructure
@using SFA.DAS.EmployerFinance.Web.TagHelpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SFA.DAS.EmployerFinance.Web.ViewModels.SentTransferConnectionInvitationViewModel

@{
    ViewBag.Title = "Sent transfer connection request";
    ViewBag.Section = "finance";
    ViewBag.PageID = "page-transfer-connection-requests-sent";
    ViewBag.GaData.Vpv = "/accounts/transfers/connection/requests/sent";
}


<partial model="@ViewData.ModelState" name="_ValidationSummary"/>
<div class="grid-row">
    <div class="column-two-thirds">
        <div class="success-summary">
            <h1 class="bold-large">Request sent</h1>
            <p><i class="icon-green-tick"></i> You've sent a connection request to @Model.TransferConnectionInvitation.ReceiverAccount.Name with account ID @Model.TransferConnectionInvitation.ReceiverAccount.PublicHashedId from @Model.TransferConnectionInvitation.SenderAccount.Name</p>
        </div>
        <h2 class="heading-xlarge">What next?</h2>
        <form method="POST" asp-controller="TransferConnectionInvitations" asp-action="Sent" asp-route-hashedAccountId="@Model.HashedAccountId" asp-route-transferConnectionInvitationId="@Model.HashedTransferConnectionInvitationId">
            <div asp-fieldname="Choice">
                <fieldset>
                    <legend>
                        <span class="visuallyhidden">What next?</span>
                        @Html.ValidationMessageFor(m => m.Choice)
                    </legend>
                    <label class="block-label selection-button-radio">
                        @Html.RadioButtonFor(m => m.Choice, "GoToTransfersPage")
                        Go to transfers
                    </label>
                    <label class="block-label selection-button-radio">
                        @Html.RadioButtonFor(m => m.Choice, "GoToHomepage")
                        Go to the homepage
                    </label>
                </fieldset>
            </div>
            <button class="button" type="submit">Continue</button>
        </form>
    </div>
</div>

@section breadcrumb {
    <div class="breadcrumbs">
        <ol role="navigation">
            <li><a asp-route="@RouteNames.TransferConnectionsIndex" asp-route-hashedAccountId="@Model.HashedAccountId" class="link-back" >Back</a></li>
        </ol>
    </div>
}