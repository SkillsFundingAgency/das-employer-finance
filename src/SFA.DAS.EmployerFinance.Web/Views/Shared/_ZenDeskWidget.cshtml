@using SFA.DAS.EmployerFinance.Configuration
@using WebEssentials.AspNetCore.CdnTagHelpers
@inject ZenDeskConfiguration ZenDeskConfiguration

@{
    var snippetUrl = $"https://static.zdassets.com/ekr/snippet.js?key={ZenDeskConfiguration.ZenDeskSnippetKey}";
    var cobrowsingSnippetUrl = $"https://embed-euw1.rcrsv.io/{ZenDeskConfiguration.ZenDeskCobrowsingSnippetKey}?zwwi=1";
}

<script type="text/javascript">
    window.zESettings = {
        webWidget: {
            contactForm: {
                attachments: false
            },
            chat: {
                menuOptions: {
                    emailTranscript: false
                }
            },
            helpCenter: {
                filter: {
                    section: @ZenDeskConfiguration.ZenDeskSectionId
                }
            }
        }
    };
</script>
<script id="ze-snippet" src="@snippetUrl"></script>
<script id="co-snippet" src="@cobrowsingSnippetUrl"></script>
@Html.SetZenDeskLabels(new string[] { ViewBag.ZenDeskLabel })